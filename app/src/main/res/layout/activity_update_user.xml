<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserActivity">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Update Account"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="Full Name"/>

        <EditText
            android:id="@+id/txt_update_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_marginLeft="100dp" />

        <EditText
            android:id="@+id/txt_update_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_marginLeft="100dp" />

        <EditText
            android:id="@+id/txt_update_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:layout_marginLeft="100dp" />

        <DatePicker
            android:id="@+id/update_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="80dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginLeft="100dp" />
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="103dp">
            <Switch
                android:id="@+id/update_gender_sw"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="female"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="male"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/bt_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="update" />
        <Button
            android:id="@+id/bt_reset_day_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Reset day count"
            android:backgroundTint="@color/light_gray"/>

        <Button
            android:id="@+id/bt_reset_week_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Reset week count"
            android:backgroundTint="@color/light_gray"/>

        <Button
            android:id="@+id/bt_reset_month_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Reset month count"
            android:backgroundTint="@color/light_gray"/>






    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>