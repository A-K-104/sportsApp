<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideosActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_hand_exercises"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="hand exercises"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    <Button
        android:id="@+id/bt_leg_exercises"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="leg exercises"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />
    <Button
        android:id="@+id/bt_stomach_exercises"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="stomach exercises"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>